# Orange Trade 環境變數設置
# 複製此文件為 .env 並填入實際值

# 應用程式端口
PORT=3000

# 環境模式 (development/production)
NODE_ENV=production

# JWT 密鑰 - 請使用安全的隨機字符串
# 可以使用以下命令生成: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_here_change_this_in_production

# 數據庫路徑
DATABASE_PATH=./data/orange_stock.db

# 管理員設置
ADMIN_USERNAME=wudodo
INITIAL_STOCK_PRICE=10

# 可選：限流設置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 